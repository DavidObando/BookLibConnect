<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BookLibConnect.Core.UI.Mac.ViewModels"
             x:Class="BookLibConnect.Core.UI.Mac.Views.AboutView"
             x:DataType="vm:AboutViewModel">

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
              Spacing="12" Margin="32">
    <TextBlock Text="{Binding AppName}"
               FontSize="28" FontWeight="Bold"
               HorizontalAlignment="Center" />
    <TextBlock HorizontalAlignment="Center" FontSize="14">
      <TextBlock.Text>
        <MultiBinding StringFormat="Version {0}">
          <Binding Path="Version" />
        </MultiBinding>
      </TextBlock.Text>
    </TextBlock>
    <TextBlock Text="{Binding Description}"
               HorizontalAlignment="Center"
               TextWrapping="Wrap"
               MaxWidth="400" />
    <TextBlock Text="{Binding Copyright}"
               HorizontalAlignment="Center"
               Foreground="Gray" />
  </StackPanel>

</UserControl>
