<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:core.audiamus.connect.ui.mac.ViewModels"
             x:Class="core.audiamus.connect.ui.mac.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

  <ScrollViewer Padding="16">
    <StackPanel Spacing="16">
      <!-- Download Settings -->
      <Expander Header="Download Settings" IsExpanded="True">
        <StackPanel Spacing="8" Margin="16,8">
          <CheckBox Content="Auto-update library on start"
                    IsChecked="{Binding AutoUpdateLibrary}" />
          <CheckBox Content="Multi-part download"
                    IsChecked="{Binding MultiPartDownload}" />
          <CheckBox Content="Keep encrypted files"
                    IsChecked="{Binding KeepEncryptedFiles}" />

          <StackPanel Spacing="4">
            <TextBlock Text="Download directory:" />
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBox Text="{Binding DownloadDirectory}" Width="400" IsReadOnly="True" />
              <Button Content="Browse…" Command="{Binding BrowseDownloadDirectoryCommand}" />
            </StackPanel>
          </StackPanel>
        </StackPanel>
      </Expander>

      <!-- Export Settings -->
      <Expander Header="Export Settings" IsExpanded="True">
        <StackPanel Spacing="8" Margin="16,8">
          <CheckBox Content="Export to AAX"
                    IsChecked="{Binding ExportToAax}" />
          <StackPanel Spacing="4">
            <TextBlock Text="Export directory:" />
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBox Text="{Binding ExportDirectory}" Width="400" IsReadOnly="True" />
              <Button Content="Browse…" Command="{Binding BrowseExportDirectoryCommand}" />
            </StackPanel>
          </StackPanel>
        </StackPanel>
      </Expander>

      <!-- Configuration Settings -->
      <Expander Header="Configuration" IsExpanded="True">
        <StackPanel Spacing="8" Margin="16,8">
          <CheckBox Content="Encrypt configuration"
                    IsChecked="{Binding EncryptConfiguration}" />
        </StackPanel>
      </Expander>
    </StackPanel>
  </ScrollViewer>

</UserControl>
